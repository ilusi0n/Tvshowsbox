post_install() {
  echo "Create a directory called TVShowsBox on your user directory and use the example file provided at /usr/share/doc/TVShowsBox.conf"
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  echo "Leftover files may reside in /var/{lib,tmp,log}/tomcat8"
  echo "If you remove them, you may also want to remove user and group 'tomcat8'"
}